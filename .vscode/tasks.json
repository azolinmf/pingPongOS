{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: gcc build active file",
			"command": "/usr/bin/gcc",
			"args": [
				"-g",
				"",
				"-Wall",
				"-Wextra",
				// "${workspaceFolder}/pingpong.c",
				// "${workspaceFolder}/queue.c",
				// "${workspaceFolder}/pingpong-tasks3.c",
				// "${workspaceFolder}/ppos.c",
				"${workspaceFolder}/ppos_disk.c",
				"${workspaceFolder}/disk.c",
				"${workspaceFolder}/pingpong-disco1.c",
				"${workspaceFolder}/ppos-core-aux.c",
				"${workspaceFolder}/libppos_static.a",
				"-o",
				"${workspaceFolder}/pingpong.exe",
				"-lrt"
			],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}